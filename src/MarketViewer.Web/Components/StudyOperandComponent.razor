@using MarketViewer.Contracts.Enums
@using MarketViewer.Contracts.Models.ScanV2;
@using MarketViewer.Contracts.Models.ScanV2.Operands

<MudPaper Elevation="11" Class="d-flex gap-4 pa-2" Style="width: 500px">
    <MudSelect @bind-Value="Operand.Modifier" T="OperandModifier" Label="Modifier" AnchorOrigin="Origin.BottomCenter">
        @foreach (OperandModifier type in Enum.GetValues(typeof(OperandModifier)))
        {
            <MudSelectItem Value="@type">@type</MudSelectItem>
        }
    </MudSelect>

    <MudSelect @bind-Value="Operand.Study" T="StudyType" Label="Type" AnchorOrigin="Origin.BottomCenter">
        @foreach (StudyType type in Enum.GetValues(typeof(StudyType)))
        {
            <MudSelectItem Value="@type">@type</MudSelectItem>
        }
    </MudSelect>

    <MudTextField @bind-Value="Operand.Parameters" Label="Parameters" Variant="Variant.Text"></MudTextField>

    <MudNumericField Style="width: 40px" @bind-Value="Operand.Multiplier" Label="Multiplier" Variant="Variant.Text" Min="1" Max="60" />

    <MudSelect @bind-Value="Operand.Timespan" T="Timespan" Label="Timespan" AnchorOrigin="Origin.BottomCenter">
        @foreach (Timespan type in Enum.GetValues(typeof(Timespan)))
        {
            <MudSelectItem Value="@type">@type</MudSelectItem>
        }
    </MudSelect>
</MudPaper>

@code {
    [Parameter] public StudyOperand Operand { get; set; }
}
